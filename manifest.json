{
    "manifest_version": 3,
    "name": "closeOut",
    "version": "1.0",
    "description": "Close all inactive Zendesk tabs using Ctrl+Shift+Z.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://*.zendesk.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": "icon.png",
      "default_title": "Close Inactive Zendesk Tabs using Ctrl+Shift+Z"
    },
    "commands": {
      "close-inactive-tabs": {
        "suggested_key": {
          "default": "Ctrl+Shift+Z"
        },
        "description": "Close inactive Zendesk tabs"
      }
    }
  }
  